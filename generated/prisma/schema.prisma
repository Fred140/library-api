generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// donn√©es livre 
model Livre {
  id          Int      @id @default(autoincrement())
  titre       String
  auteur      String
  resume      String
  publication DateTime
}
